<!doctype html>
    <%- include ../include/header.ejs %>

    <body>

    <%- include ../include/snap_header.ejs %>

    <div class="container" style="color: black; width: auto" >
      <div class="page-header">
        <h1>Create Appointment</h1>
      </div>
      <div class="col-md-6">
        <form class="form" role="form">
              <div class="form-group">
                <label>Symptoms/Causes:</label><br>
                <textarea class="form-control" rows="5"></textarea>
              </div>              
              
              <div class="form-group">
                <label>Appointment criteria: </label>
                <span class="btn-group" data-toggle="buttons-radio">
                  <button class="btn active">Doctor</button>
                  <button class="btn">Department</button>
                </span>
              </div>

              <div class="form-group">
                <label>Select doctor: </label>
                <div>
                  <select data-placeholder="Choose a doctor..." class="chosen-select" style="width:350px;" tabindex="2">
                    <option value=""></option>
                    <option value="Dr.Karn">Dr. Karn GG - Computer Deparment</option>
                    <option value="Dr.North">Dr. North Oppa - Computer Department</option>
                  </select>
                </div>
              </div>
              
              <button class="btn btn-primary">Next</button> 
        </form>
      </div>
    </div>

    <%- include ../include/snap_footer.ejs %>

    <script type="text/javascript">
    $(".chosen-select").chosen();
    </script>

  </body>
</html>
