<!DOCTYPE html>
<% layout('layout') -%>
     
     <!-- Heading -->
     <md-content flex id="content">
      <md-toolbar>
        <div class="md-toolbar-tools">
          <md-button class="md-icon-button" ng-click="toggleNav('left')" hide-gt-md aria-label="Menu">
            <md-icon md-font-library="material-icons">menu</md-icon>
          </md-button>
          <h2>
            <i class="material-icons">supervisor_account</i>
            <span>ลืมรหัสผ่าน</span>
          </h2>
        </div>
      </md-toolbar>

      <!-- Content -->
      <md-content ng-controller="resetPasswordCtrl" flex layout-padding>
      <form ng-submit="resetPassword($event)" name="regForm">
      <md-card flex="50">
        <md-card-content >
        <h1 >
          <span>กรุณากรอกEmailที่เคยใช้ลงทะเบียน</span>
        </h1>
        <md-content layout-padding class="autoScroll">
          <md-input-container class="md-icon-float md-block" flex="65" >
            <md-icon md-font-library="material-icons" class="material-icons">mail_outline</md-icon>
            <!-- Use floating label instead of placeholder -->
            <label>Email</label>
            <input ng-model="email" type="email" name="email" required ng-pattern="/^[^\s@]+@[^\s@]+\.[^\s@]{2,}$/">
            <span style="color:red" ng-show="regForm.email.$dirty && regForm.email.$invalid">
              <span ng-show="regForm.email.$error.required">Email is required.</span>
              <span ng-show="regForm.email.$error.pattern">This email is invalid.</span>
            </span>
          </md-input-container>
          <md-content layout="row" layout-align="end center">
            <md-button class="md-raised md-primary" type="submit" >รีเซ็ต</md-button>
          </md-content>
          </md-card-content>
        </md-card> 

        
      </form>
      </md-content>
      



