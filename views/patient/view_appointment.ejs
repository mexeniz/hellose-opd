<% layout('layout') -%>

<!-- Heading -->
<md-content flex id="content">
	<md-toolbar>
	  <div class="md-toolbar-tools">
	    <md-button class="md-icon-button" ng-click="toggleNav('left')" hide-gt-md aria-label="Menu">
	      <md-icon md-font-library="material-icons">menu</md-icon>
	    </md-button>
	    <h2>
	      <span>View Appointment</span>
	    </h2>
	  </div>
	</md-toolbar>

	<!-- Content -->
	<md-content flex layout-padding ng-controller="ViewAppointmentCtrl" ng-init="init('<%- appId %>')">
		<md-card>
	        <md-toolbar class="md-warn">
	          <div class="md-toolbar-tools">
	            <h2 class="md-flex" style="font-size: 36px;"><md-icon md-font-library="material-icons">assignment_ind</md-icon> รายละเอียดนัดหมาย</h2>
	          </div>
	        </md-toolbar>

	        <md-card-content layout="column" layout-align="start start">
	          <div flex>
	            <span style="font-weight: bold">ชื่อแพทย์:</span> {{ appInfo.doctor.userId.firstname + ' ' + appInfo.doctor.userId.lastname }}
	          </div>
	          <br>
	          <div flex>
	            <span style="font-weight: bold">ชื่อผู้ป่วย:</span> {{ appInfo.patient.userId.firstname + ' ' + appInfo.patient.userId.lastname }}
	          </div>
	          <br>
	          <div flex>
	            <span style="font-weight: bold">วันที่: </span> {{ appInfo.roundWard.date | date: 'dd/MM/yyyy'}}
	          </div>
	          <div flex>
	            <span style="font-weight: bold">เวลา: </span>{{ getTimeMessage(appInfo.roundWard.time, appInfo.slot) }}
	          </div>
	          <div flex>
	            <span style="font-weight: bold">สถานะ: </span>{{ appInfo.status }}
	          </div>
	          <br>
	          <div flex>
	            <div style="font-weight: bold">อาการหรือสาเหตุที่ต้องการพบแพทย์:</div>
	            {{ appInfo.causes }}
	          </div>

	          <br>

	        </md-card-content>
	        <br>
	        </md-card-content>
		      <md-card-actions layout="row" layout-align="end center">
		      	<md-button class="md-primary md-raised">ยืนยันนัดหมาย</md-button>
		        <md-button class="md-primary">เลื่อนนัดหมาย</md-button>
		        <md-button class="md-warn" ng-click="cancel()">ยกเลิกนัดหมาย</md-button>
		      </md-card-actions>
	      </md-card>
	</md-content>
</md-content>